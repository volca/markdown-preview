{
    "name": "Markdown Preview Plus",
    "version": "0.7.5",
    "manifest_version": 2,

    "description": "Converts and previews markdown files (.md, .markdown) to HTML(include TOC) right inside Chrome and support live reload",
    "icons": {
        "128": "images/icon.png",
        "48": "images/icon.png",
        "16": "images/icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "file://*/*.*md*",
                "file://*/*.*MD*",
                "file://*/*.text",
                "file://*/*.markdown*",
                "file://*/*.mdown*",
                "file://*/*.txt*",
                "file://*/*.mkd*",
                "file://*/*.rst*",
                "*://*/*.*md*",
                "*://*/*.*MD*",
                "*://*/*.text",
                "*://*/*.markdown*",
                "*://*/*.mdown*",
                "*://*/*.txt*",
                "*://*/*.mkd*",
                "*://*/*.rst*"
            ],
            "css": ["theme/MarkdownTOC.css"],
            "js": [
                "js/jquery.js",
                "js/marked.js",
                "js/highlight.js",
                "js/config.js",
                "js/markdownify.js",
                "js/webfont.js",
                "js/snap.svg-min.js",
                "js/underscore-min.js",
                "js/sequence-diagram-min.js",
                "js/raphael.min.js",
                "js/flowchart.min.js",
                "js/diagramflowseq.js",
                "js/katex.min.js",
                "js/rawdeflate.js",
                "js/platumlencode.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage",
        "clipboardWrite",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "bootstrap.css",
        "theme/Clearness.css",
        "theme/ClearnessDark.css",
        "theme/Github.css",
        "theme/MarkdownTOC.css",
        "theme/TopMarks.css",
        "theme/YetAnotherGithub.css",
        "theme/GithubLeft.css",
        "theme/katex.min.css",
        "theme/i/cal.png",
        "theme/i/compass.png",
        "theme/i/doc.png",
        "theme/i/email.png",
        "theme/i/folder.png",
        "theme/fonts/KaTeX_AMS-Regular.ttf",
        "theme/fonts/KaTeX_AMS-Regular.woff",
        "theme/fonts/KaTeX_AMS-Regular.woff2",
        "theme/fonts/KaTeX_Caligraphic-Bold.ttf",
        "theme/fonts/KaTeX_Caligraphic-Bold.woff",
        "theme/fonts/KaTeX_Caligraphic-Bold.woff2",
        "theme/fonts/KaTeX_Caligraphic-Regular.ttf",
        "theme/fonts/KaTeX_Caligraphic-Regular.woff",
        "theme/fonts/KaTeX_Caligraphic-Regular.woff2",
        "theme/fonts/KaTeX_Fraktur-Bold.ttf",
        "theme/fonts/KaTeX_Fraktur-Bold.woff",
        "theme/fonts/KaTeX_Fraktur-Bold.woff2",
        "theme/fonts/KaTeX_Fraktur-Regular.ttf",
        "theme/fonts/KaTeX_Fraktur-Regular.woff",
        "theme/fonts/KaTeX_Fraktur-Regular.woff2",
        "theme/fonts/KaTeX_Main-Bold.ttf",
        "theme/fonts/KaTeX_Main-Bold.woff",
        "theme/fonts/KaTeX_Main-Bold.woff2",
        "theme/fonts/KaTeX_Main-BoldItalic.ttf",
        "theme/fonts/KaTeX_Main-BoldItalic.woff",
        "theme/fonts/KaTeX_Main-BoldItalic.woff2",
        "theme/fonts/KaTeX_Main-Italic.ttf",
        "theme/fonts/KaTeX_Main-Italic.woff",
        "theme/fonts/KaTeX_Main-Italic.woff2",
        "theme/fonts/KaTeX_Main-Regular.ttf",
        "theme/fonts/KaTeX_Main-Regular.woff",
        "theme/fonts/KaTeX_Main-Regular.woff2",
        "theme/fonts/KaTeX_Math-BoldItalic.ttf",
        "theme/fonts/KaTeX_Math-BoldItalic.woff",
        "theme/fonts/KaTeX_Math-BoldItalic.woff2",
        "theme/fonts/KaTeX_Math-Italic.ttf",
        "theme/fonts/KaTeX_Math-Italic.woff",
        "theme/fonts/KaTeX_Math-Italic.woff2",
        "theme/fonts/KaTeX_SansSerif-Bold.ttf",
        "theme/fonts/KaTeX_SansSerif-Bold.woff",
        "theme/fonts/KaTeX_SansSerif-Bold.woff2",
        "theme/fonts/KaTeX_SansSerif-Italic.ttf",
        "theme/fonts/KaTeX_SansSerif-Italic.woff",
        "theme/fonts/KaTeX_SansSerif-Italic.woff2",
        "theme/fonts/KaTeX_SansSerif-Regular.ttf",
        "theme/fonts/KaTeX_SansSerif-Regular.woff",
        "theme/fonts/KaTeX_SansSerif-Regular.woff2",
        "theme/fonts/KaTeX_Script-Regular.ttf",
        "theme/fonts/KaTeX_Script-Regular.woff",
        "theme/fonts/KaTeX_Script-Regular.woff2",
        "theme/fonts/KaTeX_Size1-Regular.ttf",
        "theme/fonts/KaTeX_Size1-Regular.woff",
        "theme/fonts/KaTeX_Size1-Regular.woff2",
        "theme/fonts/KaTeX_Size2-Regular.ttf",
        "theme/fonts/KaTeX_Size2-Regular.woff",
        "theme/fonts/KaTeX_Size2-Regular.woff2",
        "theme/fonts/KaTeX_Size3-Regular.ttf",
        "theme/fonts/KaTeX_Size3-Regular.woff",
        "theme/fonts/KaTeX_Size3-Regular.woff2",
        "theme/fonts/KaTeX_Size4-Regular.ttf",
        "theme/fonts/KaTeX_Size4-Regular.woff",
        "theme/fonts/KaTeX_Size4-Regular.woff2",
        "theme/fonts/KaTeX_Typewriter-Regular.ttf",
        "theme/fonts/KaTeX_Typewriter-Regular.woff",
        "theme/fonts/KaTeX_Typewriter-Regular.woff2"
    ],
    "browser_action": {
        "default_icon" : "images/icon.png",
        "default_title" : "Markdown Preview Plus",
        "default_popup" : "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com/; object-src 'self'",
    "options_page": "options.html"
}
