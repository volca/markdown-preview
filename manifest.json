{
  "name": "Markdown Preview Plus",
  "version": "0.2.2",
  "manifest_version": 2,

  "description": "Converts and previews markdown files (.md, .markdown) to HTML right inside Chrome.",
  "icons": {
    "128": "images/icon.png",
    "48": "images/icon.png",
    "16": "images/icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*.md*",
        "http://*/*.text",
        "http://*/*.markdown*",
        "http://*/*.mdown*",
        "http://*/*.txt*",
        "https://*/*.md*",
        "https://*/*.text",
        "https://*/*.markdown*",
        "https://*/*.mdown*",
        "https://*/*.txt*",
        "file://*/*.md",
        "file://*/*.markdown",
        "file://*/*.mdown",
        "file://*/*.text",
        "file://*/*.txt"
      ],
      "js": [
          "js/jquery.js", 
          "js/showdown.js", 
          "js/markdownify.js"
      ]
    }
  ],
  "permissions": [
      "storage", 
      "tabs", 
      "<all_urls>"
  ],
  "web_accessible_resources": [
      "bootstrap.min.css",
      "theme/Clearness.css",
      "theme/ClearnessDark.css",
      "theme/Github.css",
      "theme/TopMarks.css",
      "theme/i/cal.png",
      "theme/i/compass.png",
      "theme/i/doc.png",
      "theme/i/email.png",
      "theme/i/folder.png",
      "js/popup.js", 
      "js/options.js"
  ],
  "browser_action" : {
      "default_icon" : "images/icon.png",
      "default_title" : "Markdown Preview Plus",
      "default_popup" : "popup.html"
  },
  "options_page": "options.html"
}
